   keywords = {Genetic epidemiology,Hidden Markov model,Identity-by-descent,Identity-by-state,Independence model,Malaria,Plasmodium falciparum,Plasmodium vivax,Relatedness},
   month = {8},
   pages = {1337-1351},
   pmid = {31209105},
   publisher = {Oxford Academic},
   title = {Estimating Relatedness Between Malaria Parasites},
   volume = {212},
   url = {https://academic.oup.com/genetics/article/212/4/1337/5931242},
   year = {2019},
}
@article{Tanabe2010,
   abstract = {Plasmodium falciparum is distributed throughout the tropics and is responsible for an estimated 230 million cases of malaria every year, with a further 1.4 billion people at risk of infection [1-3]. Little is known about the genetic makeup of P. falciparum populations, despite variation in genetic diversity being a key factor in morbidity, mortality, and the success of malaria control initiatives. Here we analyze a worldwide sample of 519 P. falciparum isolates sequenced for two housekeeping genes (63 single nucleotide polymorphisms from around 5000 nucleotides per isolate). We observe a strong negative correlation between within-population genetic diversity and geographic distance from sub-Saharan Africa (R 2 = 0.95) over Africa, Asia, and Oceania. In contrast, regional variation in transmission intensity seems to have had a negligible impact on the distribution of genetic diversity. The striking geographic patterns of isolation by distance observed in P. falciparum mirror the ones previously documented in humans [4-7] and point to a joint sub-Saharan African origin between the parasite and its host. Age estimates for the expansion of P. falciparum further support that anatomically modern humans were infected prior to their exit out of Africa and carried the parasite along during their colonization of the world. © 2010 Elsevier Ltd.},
