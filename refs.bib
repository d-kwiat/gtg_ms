   pages = {1288-1299},
   pmid = {27531718},
   title = {Indels, structural variation, and recombination drive genomic diversity in Plasmodium falciparum},
   volume = {26},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/27531718 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5052046 http://genome.cshlp.org/lookup/doi/10.1101/gr.203711.115},
   year = {2016},
}
@article{Schaffner2018,
   abstract = {BACKGROUND A number of recent malaria studies have used identity by descent (IBD) to study epidemiological processes relevant to malaria control. In this paper, a software package, hmmIBD, is introduced for estimating pairwise IBD between haploid genomes, such as those of the malaria parasite, sampled from one or two populations. Source code is freely available. METHODS The performance of hmmIBD was verified using simulated data and benchmarked against an existing method for detecting IBD within populations. Code for all tests is freely available. The utility of hmmIBD for detecting IBD across populations was demonstrated using Plasmodium falciparum data from Cambodia and Ghana. RESULTS Alongside an existing method, hmmIBD was highly accurate, sensitive and specific. It is fast, requiring only 70 s on average to analyse 50 whole genome sequences on a laptop computer, and scales linearly in the number of pairwise comparisons. Treatment of different populations under hmmIBD improves detection of IBD across populations. CONCLUSION Fast and accurate software for detecting IBD in malaria parasite genetic data sampled from one or two populations is presented. The latter will likely be a useful feature for malaria elimination efforts, since it could facilitate identification of imported malaria cases. Software is robust to possible misspecification of the genotyping error and the recombination rate. However, exclusion of data in regions whose rates vary greatly from their genome-wide average is recommended.},
   author = {Stephen F. Schaffner and Aimee R. Taylor and Wesley Wong and Dyann F. Wirth and Daniel E. Neafsey},
