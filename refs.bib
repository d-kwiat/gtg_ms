   month = {1},
   pages = {327-32},
   pmid = {14726583},
   title = {Unifying the epidemiological and evolutionary dynamics of pathogens.},
   volume = {303},
   url = {http://www.sciencemag.org/cgi/doi/10.1126/science.1090727 http://www.ncbi.nlm.nih.gov/pubmed/14726583},
