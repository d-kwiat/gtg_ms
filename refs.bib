   doi = {10.1016/J.CUB.2010.05.053},
   issn = {09609822},
   issue = {14},
   journal = {Current Biology},
   keywords = {EVO-ECOL,HUMDISEASE},
   pages = {1283-1289},
   pmid = {20656209},
   title = {Plasmodium falciparum Accompanied the Human Expansion out of Africa},
